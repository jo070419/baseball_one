募集編集ページ
<%= form_with model: @recruitment, local: true do |f| %>
<%= render 'layouts/error_messages', model: @recruitment %>
  <div>
    タイトル
  </div>
  <%= f.text_field :title, class:"title" %>
  <div>
    募集カテゴリ
  </div>
  <%= f.collection_select(:category_id, Category.all, :id, :name, {}) %>
  <div>
    場所
  </div>
  <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}) %>
  <%= f.text_field :municipality, placeholder:"市" %>
  <%= f.text_field :locate, placeholder:"以降の住所〜" %>
  <%= f.text_field :ground, placeholder:"グラウンド名" %>
  <div>
    開催日時
  </div>
  <%= f.date_field :date, placeholder:"○月○日" %>
  <%= f.collection_select(:start_time_id, StartTime.all, :id, :name, {}) %>
  〜
  <%= f.collection_select(:end_time_id, EndTime.all, :id, :name, {}) %>
  <div>
    募集期限
  </div>
  <%= f.date_field :dead_line, placeholder:"○月○日" %>
  <div>
    本文
  </div>
  <%= f.text_area :recruit_text, class:"recruit-text", placeholder:"本文"%>
  <%= f.submit "募集する" %>
<% end %>
<%= link_to '募集詳細画面へ戻る', recruitment_path %>